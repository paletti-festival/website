<h2>Dates</h2>

<div class="biglietti-list">
{%- for post in collections.dates -%}
    <div class="biglietti">
        <div class="row">
            <span class="title">{{ post.data.title }}</span>
        </div>
        <div class="row">
            <div class="date-time">
                <span class="date">{{ post.data.date | formatDate }}</span>
                <span class="time">
                    {{ post.data.date | formatTime }} â€“
                    {{ post.data.until | formatTime }}
                </span>
            </div>
            <span class="text">
                Free entrance<br>
                Hello donation
            </span>
        </div>
        <div class="row">
            <span class="address">
                {% if post.data.place %}
                {{ post.data.place.name }}, {{ post.data.place.address }}                
                {% endif %}
            </span>
        </div>
    </div>
{%- endfor -%}
</div>
