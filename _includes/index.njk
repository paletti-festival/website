---
layout: base
---
<section class="start large-wrapper">
    {{ content | safe }}
</section>
{%- for post in collections.main | reverse -%}
{% if post.data.lang == page.lang %}
    <section
    {% if post.data.class %}
    class="{{ post.data.class }}"
    {% else %}
    class="wrapper"
    {% endif %}
    >
    {{ post.content | safe}}
    </section>
{% endif %}
{%- endfor -%}